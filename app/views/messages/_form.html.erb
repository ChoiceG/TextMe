<%= form_with(model: [single_room, message], remote: true, html: { class: "flex items-center gap-2 p-2" }) do |f| %>
  <%= f.text_field :body, placeholder: "Type your message...", class: "flex-grow rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-sm", autocomplete: "off" %>
  <%= f.submit "Send", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 text-sm font-semibold" %>
<% end %>
