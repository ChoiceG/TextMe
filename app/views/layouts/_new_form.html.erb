<%= form_with(model: @room, remote: true, class: "flex items-end gap-4 w-full max-w-4xl") do |f| %>
  <div class="flex flex-col flex-grow">
    <%= f.label :name, "Room Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500", autocomplete: "off" %>
  </div>

  <div class="flex flex-col flex-grow">
    <%= f.label :description, "Room Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :description, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500", autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded transition", data: { disable_with: "Submitting..." } %>
  </div>
<% end %>
